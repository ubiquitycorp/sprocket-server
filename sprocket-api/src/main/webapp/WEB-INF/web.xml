<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<context-param>
		<param-name>resteasy.scan</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.servlet.mapping.prefix</param-name>
		<param-value>/api</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.providers</param-name>
		<param-value>com.ubiquity.api.interceptors.CatchAllExceptionMapper,com.ubiquity.api.interceptors.IOExceptionMapper,com.ubiquity.api.interceptors.ConstraintValidationExceptionMapper,com.ubiquity.api.interceptors.IllegalArgumentExceptionMapper,com.ubiquity.api.interceptors.HttpExceptionMapper,com.ubiquity.api.interceptors.UnSupportedOperationExceptionMapper,com.ubiquity.sprocket.api.interceptors.AuthorizationExceptionMapper,com.ubiquity.sprocket.api.interceptors.ExternalNetworkExceptionMapper
      </param-value>
	</context-param>






	<!-- <listener> <listener-class>org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap</listener-class> 
		</listener> -->
	<listener>
		<listener-class>com.ubiquity.sprocket.api.ServicesInitializer</listener-class>
	</listener>
	<servlet>
		<servlet-name>Resteasy</servlet-name>
		<servlet-class>org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.ubiquity.sprocket.api.SprocketApplication</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Resteasy</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
</web-app>